---
import getLeadershipData from "~/leadershipData";
import Socials from "./Socials.astro";

export interface Props {
  title: string;
  people: string[]
}

const { title, people = [] } = Astro.props;
---

<tr>
  <td class="text-xl py-2 font-bold">{title}</td>
  <td class="flex flex-col text-xl py-2 font-bold text-right text-primary">
    {
      people.map((name) => (
        <div class="flex flex-col items-end">
          {name}
          <Socials classes={["flex-col items-end justify-end"]} {...getLeadershipData(name)}/>
        </div>
      ))
    }
  </td>
</tr>